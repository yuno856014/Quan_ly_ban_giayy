@model ViewSneakerHome
@using System.Globalization
@{
    ViewBag.Title = " View";
}


<div class="container">
    <h1 style="font-family:'Pattaya', sans-serif; color: #555 ">
        @Html.DisplayFor(model => model.SneakerName)
    </h1>
    <div class="row">
        <div class="col-md-5">
            <div class="form-group">
                <input type="hidden" asp-for="@Model.SneakerId" />
                <img class="img-thumbnail no-photo" src="@Model.ExistPhoto" alt="no photo" />
            </div>
        </div>
        <div class="col-md-7">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PublishYear)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PublishYear)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Size)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Size)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Information)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Information)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Quantity)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Quantity)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-10" style="color: #ae2121">
                    @Html.DisplayFor(model => model.Price) đ
                </dd>
            </dl>
            <a href="/" class="btn btn-secondary" style="background-color: gray; color: white;">
                <i class="fas fa-step-backward"></i>
                Back
            </a>
            <a asp-controller="Home" asp-action="AddToCart" asp-route-sneakerId="@Html.ValueFor(model => model.SneakerId)" class="btn btn-success ">
                Buy Now
                <i class="fas fa-shopping-cart"></i>
            </a>
        </div>
    </div>

</div>