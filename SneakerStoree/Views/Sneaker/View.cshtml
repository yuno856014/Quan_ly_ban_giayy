@model ViewSneaker

@{
    ViewBag.Title = $"{Model.TradeMark.TradeMarkName} | View";
}

<h1 style="font-family: fantasy">View</h1>

<div>
    <h4>ViewSneaker</h4>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.SneakerName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SneakerName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PublishYear)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PublishYear)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Size)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Size)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Information)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Information)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Quantity)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Quantity)
                </dd>
            </dl>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <input type="hidden" asp-for="@Model.SneakerId" />
                <img class="img-thumbnail no-photo" src="@Model.ExistPhoto" alt="no photo" />
            </div>
        </div>
    </div>
    
</div>
<div class="row">
    <div class="col-md-2">
        <div class="form-group">
            <a asp-controller="Sneaker" asp-action="Modify" asp-route-sneakerId="@Model.SneakerId" class="btn btn-info">
                <i class="fas fa-edit"></i>
                Update
            </a>
            <a asp-controller="Sneaker" asp-action="Remove" asp-route-sneakerId="@Model.SneakerId" class="btn btn-primary" onclick="return confirm('Are you sure deleted?')">
                <i class="lnr lnr-trash">
                </i>
                Remove
            </a>
            <a class="btn btn-dark" asp-controller="TradeMark" asp-action="index" asp-route-sneakerId="@ViewBag.SneakerId">
                <i class="lnr lnr-chevron-left">
                </i>
                Back
            </a>
        </div>
    </div>
</div>

